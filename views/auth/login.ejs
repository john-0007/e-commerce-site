<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>
<body>
    <%- include('../includes/nav.ejs') %> 
    <main>
        <% if (errorMessage) {%>
            <div class="user-message user-message--error">
                <%= errorMessage %>
            </div>
        <% } %>
        <form class="product-form" action="/login" method="POST">
            <div class="form-control">
                <label for="title">Email</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'email') ? 'invaild' : '' %>"
                    type="text" 
                    name="email" 
                    id="email"
                    value="<%= oldInput.email %>"
                    >
            </div>
            <div class="form-control">
                <label for="img">Password</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'password') ? 'invaild' : '' %>"
                    type="password" 
                    name="password" 
                    id="password"
                    value="<%= oldInput.password %>"
                    >
            </div>
            <button class="btn" type="submit">Login</button>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        </form>
        <div class="centered">
            <a class="centered" href="/reset">Reset Password</a>
        </div>
    </main>
<%- include('../includes/foot.ejs') %>
