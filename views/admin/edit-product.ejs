<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>
<body>
    <%- include('../includes/nav.ejs') %> 
    <main>
        <form class="product-form" action="/admin/<% if (editing) { %>edit-product <% } else { %>add-product <% } %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%if (editing) { %> <%= product.title %> <% } %>">
            </div>
            <div class="form-control">
                <label for="img">Image</label>
                <input type="text" name="img" id="img" value="<%if (editing) { %> <%= product.img %> <% } %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="text" name="price" id="price" step="0.01" value="<% if (editing) { %> <%=product.price %> <% } %>">
            </div>
            <div class="form-control">
                <label for="description">description</label>
                <textarea type="text" row="10" name="description" id="description"><% if (editing) { %> <%= product.description %> <% } %></textarea>
            </div>
            <% if (editing) {%>
                <input type="hidden" name="productId" value="<%= product.id %>">
            <% } %>

            <button class="btn" type="submit"><% if (editing) { %> Update Prouduct <%} else {%> Add Product<% } %></button>
        </form>
    </main>
<%- include('../includes/foot.ejs') %>
